<header class="w-100 bg-primary px-6 d-flex align-items-center justify-content-between position-relative">
	<a href="{{path('app_index')}}" class="text-white fs-2 header__link">
		<i class="bi bi-car-front me-m1"></i>
	</a>
	{% if brands is defined %}
		<a href="{{ path('app_brand_new') }}" class="text-white fs-2 header__link" data-bs-toggle="tooltip" data-bs-title="Hinzufügen">
			<i class="bi bi-plus-circle-dotted me-m1"></i>
		</a>
	{% else %}
		<a href="{{ path('app_original_car_new') }}" class="text-white fs-2 header__link" data-bs-toggle="tooltip" data-bs-title="Hinzufügen">
			<i class="bi bi-plus-circle-dotted me-m1"></i>
		</a>
	{% endif %}


	<h1 class="position-absolute translate-middle text-white top-50 start-50">{{ pageTitle }}</h1>
</header>
